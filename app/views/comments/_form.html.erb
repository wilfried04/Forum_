<%= form_with(model: [topic, comment]) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %>undefined</h2>
      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group col-sm-10">
      <%= form.text_area :comment,:class=>"comment form-control", placeholder:'Give your opinion on this topic here '%>
    </div>
      <div class="col-sm-2">
        <%= form.submit 'comment',:class=>"btn btn-outline-info my-2 my-sm-0" %>
      </div>
    </div>
<% end %>
