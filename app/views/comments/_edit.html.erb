<%= form_with(model: [topic, comment]) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %>undefined</h2>
      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.text_area :comment, id: "comment_comment_#{@topic}",class:"form-control" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
